name: cip-service-demo
services:
{%- if 'cip_ng' in components and 'type' in components.cip_ng and components.cip_ng.type == "container" %}
   cip_ng:
      build:
         context: .
         dockerfile: Dockerfile.ng
         args:
{%-      if cip_pr_host == "env.POSTGREST_HOST" %}
            ARG_POSTGREST_HOST: ${POSTGREST_HOST:-localhost}
{%-      else %}
            ARG_POSTGREST_HOST: {{ cip_pr_host }}
{%-      endif %}
{%-      if cip_pr_port == "env.POSTGREST_PORT" %}
            ARG_POSTGREST_PORT: ${POSTGREST_PORT:-3000}
{%-      else %}
            ARG_POSTGREST_PORT: {{ cip_pr_port }}
{%-      endif %}
      image: cip-service-admin-cip_ng
      hostname: cip_ng
      container_name: cip-service-demo-cip_ng
{%-    if 'external_port' in components.cip_ng and components.cip_ng.external_port is not none %}
      ports:
         - target: 80
{%-      if components.cip_ng.external_port == "env.NGINX_PORT" %}
           published: ${NGINX_PORT:-8080}
{%-      else %}
           published: {{ components.cip_ng.external_port }}
{%-      endif %}
{%-    endif %}
      networks:
         - cip
{%-    if 'add_host_gateway' in components.cip_ng and components.cip_ng.add_host_gateway == true %}
      extra_hosts:
         - host.docker.internal:host-gateway
{%-    endif %}
{%- endif %}
{%- if 'cip_gs' in components and 'type' in components.cip_gs and components.cip_gs.type == "container" %}
   cip_gs:
      build:
         context: .
         dockerfile: Dockerfile.gs
         args:
{%-      if cip_gs_host == "env.GEOSERVER_HOST" %}
            ARG_GEOSERVER_HOST: ${GEOSERVER_HOST:-localhost}
{%-      else %}
            ARG_GEOSERVER_HOST: {{ cip_gs_host }}
{%-      endif %}
{%-      if cip_gs_port == "env.GEOSERVER_PORT" %}
            ARG_GEOSERVER_PORT: ${GEOSERVER_PORT:-8081}
{%-      else %}
            ARG_GEOSERVER_PORT: {{ cip_gs_port }}
{%-      endif %}
      image: cip-service-demo-cip_gs
      hostname: cip_gs
      container_name: cip-service-demo-cip_gs
      environment:
{%-   if cip_pg_db == "env.POSTGRESQL_DB"  %}
         POSTGRESQL_DB:           $POSTGRESQL_DB
{%-   else %}
         POSTGRESQL_DB:           {{ cip_pg_db   }}
{%-   endif %}
{%-   if cip_pg_host == "env.POSTGRESQL_HOST"  %}
         POSTGRESQL_HOST:         $POSTGRESQL_HOST
{%-   else %}
         POSTGRESQL_HOST:         {{ cip_pg_host }}
{%-   endif %}
{%-   if cip_pg_port == "env.POSTGRESQL_PORT"  %}
         POSTGRESQL_PORT:         $POSTGRESQL_PORT
{%-   else %}
         POSTGRESQL_PORT:         {{ cip_pg_port }}
{%-   endif %}
{%-   if cip_gs_cip_pass == "env.POSTGRESQL_GSV_PASS"  %}
         POSTGRESQL_PASSWORD:     $POSTGRESQL_GSV_PASS
{%-   else %}
         POSTGRESQL_PASSWORD:     {{ cip_gs_cip_pass }}
{%-   endif %}
         POSTGRES_JNDI_ENABLED: true
         POSTGRES_DB: cipsrv
         POSTGRES_JNDI_RESOURCE_NAME: cipsrv_jndi
         GEOSERVER_ADMIN_USER: cipsrv_geoserver
         GEOSERVER_ADMIN_PASSWORD: cip123
{%-    if 'external_port' in components.cip_gs and components.cip_gs.external_port is not none %}
      ports:
         - target: 8080
{%-      if components.cip_gs.external_port == "env.GEOSERVER_PORT" %}
           published: ${GEOSERVER_PORT:-8081}
{%-      else %}
           published: {{ components.cip_gs.external_port }}
{%-      endif %}
{%-    endif %}
      networks:
         - cip
{%-    if 'add_host_gateway' in components.cip_gs and components.cip_gs.add_host_gateway == true %}
      extra_hosts:
         - host.docker.internal:host-gateway
{%-    endif %}
{%- endif %}
networks:
   cip:
      driver: bridge
